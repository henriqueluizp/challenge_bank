{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Challenge",
  "type": "object",
  "required": [
    "id",
    "title",
    "description",
    "solution",
    "level",
    "languageId"
  ],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "solution": { "type": "string" },
    "level": { "type": "string", "enum": ["easy", "medium", "hard"] },
    "languageId": { "type": "string" }
  },
  "additionalProperties": false
}
